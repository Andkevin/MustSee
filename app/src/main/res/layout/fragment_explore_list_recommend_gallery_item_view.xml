<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="180dp"
    android:background="@color/colorWhite"
    android:padding="5dp">

    <ImageView
        android:id="@+id/explore_list_recommend_gallery_item_img_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/default_pic_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:background="@color/colorTranslucentBalck">
    <TextView
        android:id="@+id/explore_list_recommend_gallery_item_keyword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关键字"
        android:textSize="18sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorWhite"/>


    <TextView
        android:id="@+id/explore_list_recommend_gallery_item_title_tv"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="15sp"
        android:layout_alignLeft="@id/explore_list_recommend_gallery_item_keyword_tv"
        android:layout_below="@id/explore_list_recommend_gallery_item_keyword_tv"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:text="查看"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_half_circle_bg"
        android:gravity="center"
        android:layout_alignTop="@id/explore_list_recommend_gallery_item_title_tv"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
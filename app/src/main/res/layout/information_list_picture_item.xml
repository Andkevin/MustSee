<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:id="@+id/item_picture_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:lines="2"/>
    <ImageView
        android:id="@+id/item_picture_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:layout_below="@id/item_big_title_tv"
        android:src="@drawable/default_big_gallery"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_picture_iv"
        android:layout_margin="10dp">
        <TextView
        android:id="@+id/item_picture_praise_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/video_before_praise_item"/>
        <TextView
            android:id="@+id/item_picture_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/item_picture_praise_tv"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/video_comment_item"/>
        <ImageView
            android:id="@+id/item_picture_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/video_share_item"/>
        <ImageView
            android:id="@+id/item_picture_collect_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/item_picture_share_iv"
            android:src="@drawable/video_before_collect_item"/>

    </RelativeLayout>

</RelativeLayout>
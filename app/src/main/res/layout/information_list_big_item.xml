<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp"
    android:gravity="center">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightGray"/>
    <TextView
        android:id="@+id/item_big_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:maxLines="2"/>
    <ImageView
        android:id="@+id/item_big_image_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picture_height"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/item_big_title_tv"
        android:src="@drawable/default_big_gallery"/>

    <TextView
        android:id="@+id/item_big_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_big_image_iv"
        android:layout_marginBottom="20dp"
        android:textSize="10sp"
        android:textColor="#66000000" />
    <TextView
        android:id="@+id/item_big_channel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_big_image_iv"
        android:layout_alignRight="@id/item_big_image_iv"
        android:layout_marginBottom="20dp"
        android:textSize="10sp"
        android:visibility="gone"
        android:textColor="#66000000" />

</RelativeLayout>
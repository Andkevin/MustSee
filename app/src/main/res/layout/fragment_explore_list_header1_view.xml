<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/explore_list_header_vp"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>

    <LinearLayout
        android:id="@+id/explore_list_header_indic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/explore_list_vpager_indic_slt"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/explore_list_vpager_indic_slt"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/explore_list_vpager_indic_slt"/>
    </LinearLayout>

    <TextView
        android:id="@+id/explore_list_header_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/explore_list_header_indic_layout"
        android:text="G20领导人"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/all_sub_right_item_height"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/all_sub_right_logo_iv"
        android:layout_width="@dimen/all_sub_right_logo_width"
        android:layout_height="@dimen/all_sub_right_logo_height"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/all_sub_right_keyword_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/all_sub_right_logo_iv"
        android:textColor="@color/colorBlack"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/all_sub_right_add_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />
</RelativeLayout>
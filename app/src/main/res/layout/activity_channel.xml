<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android1604.mustsee.ui.ChannelActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/channel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/selectedTextColor"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/channel_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_title_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="@string/channel"/>
    </android.support.v7.widget.Toolbar>

    <com.android1604.mustsee.ui.EasyTipDragView
        android:id="@+id/channel_easy_tip_drag_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
        <TextView
            android:id="@+id/item_ver_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:lines="2"/>
        <LinearLayout
            android:id="@+id/item_ver_images_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_below="@id/item_ver_title_tv"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_ver_image1_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/default_small"/>
            <ImageView
                android:id="@+id/item_ver_image2_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_small"/>
            <ImageView
                android:id="@+id/item_ver_image3_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/default_small"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_ver_from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ver_images_ll"
            android:layout_margin="10dp"
            android:textColor="#66000000" />
    <TextView
        android:id="@+id/item_ver_channel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ver_images_ll"
        android:layout_alignRight="@id/item_ver_images_ll"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="#66000000" />

</RelativeLayout>
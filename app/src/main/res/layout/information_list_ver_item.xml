<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightGray" />

    <TextView
        android:id="@+id/item_ver_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:maxLines="2"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"  />

    <LinearLayout
        android:id="@+id/item_ver_images_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ver_title_tv"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_ver_image1_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_picture_height"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/default_small" />

        <ImageView
            android:id="@+id/item_ver_image2_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_picture_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/default_small" />

        <ImageView
            android:id="@+id/item_ver_image3_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_picture_height"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/default_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_ver_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ver_images_ll"
        android:layout_marginBottom="20dp"
        android:textSize="10sp"
        android:textColor="#66000000" />

    <TextView
        android:id="@+id/item_ver_channel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/item_ver_images_ll"
        android:layout_below="@id/item_ver_images_ll"
        android:layout_marginBottom="20dp"
        android:textSize="10sp"
        android:textColor="#66000000"
        android:visibility="gone" />

</RelativeLayout>
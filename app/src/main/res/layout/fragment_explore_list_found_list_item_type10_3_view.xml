<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="10dp">

    <TextView
        android:id="@+id/explore_list_found_list_item_type10_3_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/explore_list_found_list_item_type10_3_iv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/explore_list_found_list_item_type10_3_iv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/explore_list_found_list_item_type10_3_iv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/explore_list_found_list_item_type10_3_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:textSize="10sp" />
    
</LinearLayout>